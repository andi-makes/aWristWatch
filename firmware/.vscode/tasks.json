{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build docker",
            "group": "build",
            "type": "process",
            "command": "docker",
            "args": [
                "build",
                "-t",
                "arm-none-eabi",
                "."
            ],
            "problemMatcher": []
        },
        {
            "label": "configure local build folder",
            "group": "build",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/configure.sh",
            "args": [
                "${workspaceFolder}/build",
                "${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "label": "clean re-configure local build folder",
            "group": "build",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/reconfigure.sh",
            "args": [
                "${workspaceFolder}/build",
                "${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "label": "remove build and bin",
            "group": "build",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/build ${workspaceFolder}/bin",
            "problemMatcher": []
        },
        {
            "label": "build",
            "group": "build",
            "type": "process",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}